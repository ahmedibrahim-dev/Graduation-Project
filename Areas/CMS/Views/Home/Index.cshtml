
@{
    ViewBag.Title = "Index";
}

					<!-- Page Header -->
<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <h3 class="page-title">Welcome Admin!</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item active">Dashboard</li>
            </ul>
        </div>
    </div>
</div>
<!-- /Page Header -->
<div class="row">
    <div class="col-xl-4 col-sm-6 col-12">
        <div class="card">
            <div class="card-body">
                <div class="dash-widget-header">
                    <span class="dash-widget-icon text-info">
                        <i class="fe fe-user-plus"></i>
                    </span>
                    <div class="dash-count">
                        <h3>168</h3>
                    </div>
                </div>
                <div class="dash-widget-info">
                    <h6 class="text-muted">Doctors</h6>
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-info w-25"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 col-12">
        <div class="card">
            <div class="card-body">
                <div class="dash-widget-header">
                    <span class="dash-widget-icon text-dark">
                        <i class="fe fe-user-plus"></i>
                    </span>
                    <div class="dash-count">
                        <h3>487</h3>
                    </div>
                </div>
                <div class="dash-widget-info">

                    <h6 class="text-muted">Sellers</h6>
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-dark w-50"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 col-12">
        <div class="card">
            <div class="card-body">
                <div class="dash-widget-header">
                    <span class="dash-widget-icon text-danger">
                        <i class="fe fe-users"></i>
                    </span>
                    <div class="dash-count">
                        <h3>652</h3>
                    </div>
                </div>
                <div class="dash-widget-info">

                    <h6 class="text-muted">Clients</h6>
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-danger w-75"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 col-12">
        <div class="card">
            <div class="card-body">
                <div class="dash-widget-header">
                    <span class="dash-widget-icon text-info">
                        <i class="fa fa-calendar"></i>
                    </span>
                    <div class="dash-count">
                        <h3>425</h3>
                    </div>
                </div>
                <div class="dash-widget-info">

                    <h6 class="text-muted">Appoinments</h6>
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-info w-50"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 col-12">
        <div class="card">
            <div class="card-body">
                <div class="dash-widget-header">
                    <span class="dash-widget-icon text-dark">
                        <i class="fa fa-shopping-basket"></i>
                    </span>
                    <div class="dash-count">
                        <h3>523</h3>
                    </div>
                </div>
                <div class="dash-widget-info">

                    <h6 class="text-muted">Orders</h6>
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-dark w-75"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 col-12">
        <div class="card">
            <div class="card-body">
                <div class="dash-widget-header">
                    <span class="dash-widget-icon text-danger">
                        <i class="fa fa-money"></i>
                    </span>
                    <div class="dash-count">
                        <h3>$62523</h3>
                    </div>
                </div>
                <div class="dash-widget-info">

                    <h6 class="text-muted">Revenue</h6>
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-danger w-75"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-lg-6">

        <!-- Sales Chart -->
        <div class="card card-chart">
            <div class="card-header">
                <h4 class="card-title">Revenue</h4>
            </div>
            <div class="card-body">
                <div id="morrisArea"></div>
            </div>
        </div>
        <!-- /Sales Chart -->

    </div>
    <div class="col-md-12 col-lg-6">

        <!-- Invoice Chart -->
        <div class="card card-chart">
            <div class="card-header">
                <h4 class="card-title">Status</h4>
            </div>
            <div class="card-body">
                <div id="morrisLine"></div>
            </div>
        </div>
        <!-- /Invoice Chart -->

    </div>
</div>
<div class="row">
    <div class="col-md-6 d-flex">

        <!-- Recent Orders -->
        <div class="card card-table flex-fill">
            <div class="card-header">
                <h4 class="card-title">Top Doctors</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>Doctor Name</th>
                                <th>Member Since</th>
                                <th>NO.Bookings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Doctors as IEnumerable<EyeCare.DAL.Model.Doctor>)
                            {
                                <tr>
                                    <td>
                                        <h2 class="table-avatar">
                                            @if (item.DoctorGender.Value)
                                            {
                                                <a class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="~/Areas/CMS/assets/img/doctors/doctor-thumb-01.jpg" alt="User Image"></a>

                                            }
                                            else
                                            {
                                                <a class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="~/Areas/CMS/assets/img/doctors/doctor-thumb-02.jpg" alt="User Image"></a>
                                            }
                                            <a>@item.DoctorName</a>
                                        </h2>
                                    </td>
                                    <td>@item.DoctorMemberSince</td>
                                    <td>20</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /Recent Orders -->

    </div>
    <div class="col-md-6 d-flex">

        <!-- Feed Activity -->
        <div class="card  card-table flex-fill">
            <div class="card-header">
                <h4 class="card-title">Top Sellers</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>Seller Name</th>
                                <th>Member Since</th>
                                <th>NO.Orders</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Sellers as IEnumerable<EyeCare.DAL.Model.Seller>)
                            {
                                <tr>
                                    <td>
                                        <h2 class="table-avatar">
                                            <a class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="~/Areas/CMS/assets/img/patients/patient2.jpg" alt="User Image"></a>
                                            <a>@item.SellerName </a>
                                        </h2>
                                    </td>
                                    <td>@item.SellerMemberSince</td>
                                    <td>800</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /Feed Activity -->

    </div>
</div>
<div class="row">
    <div class="col-md-12">

        <!-- Recent Orders -->
        <div class="card card-table">
            <div class="card-header">
                <h4 class="card-title">New Clients</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>Client Name</th>
                                <th>Age</th>
                                <th>Address</th>
                                <th>Member Since</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <h2 class="table-avatar">
                                        <a class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="~/Areas/CMS/assets/img/patients/patient1.jpg" alt="User Image"></a>
                                        <a>Charlene Reed </a>
                                    </h2>
                                </td>
                                <td>20</td>
                                <td>25 Str, 10th, Cairo</td>
                                <td>9 Nov 2021</td>
                            </tr>
                            <tr>
                                <td>
                                    <h2 class="table-avatar">
                                        <a href="profile.html" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="~/Areas/CMS/assets/img/patients/patient2.jpg" alt="User Image"></a>
                                        <a href="profile.html">Travis Trimble </a>
                                    </h2>
                                </td>
                                <td>35</td>
                                <td>25 Str, 10th, Cairo</td>
                                <td>5 Nov 2021</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /Recent Orders -->

    </div>
</div>
